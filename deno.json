{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true
  },
  "imports": {
    "hono": "npm:hono@^4.7.2",
    "hono/cors": "npm:hono@^4.7.2/cors",
    "hono/factory": "npm:hono@^4.7.2/factory",
    "hono/deno": "npm:hono@^4.7.2/deno",
    "hono/logger": "npm:hono@^4.7.2/logger",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.4.0",
    "zod": "npm:zod@^3.22.4",
    "hono-openapi": "npm:hono-openapi@^0.4.8",
    "zod-openapi": "npm:zod-openapi@^4.0.0",
    "@hocuspocus/server": "npm:@hocuspocus/server@^2.15.2",
    "yjs": "npm:yjs@^13.6.23",
    "y-protocols": "npm:y-protocols@^1.0.6",
    "lucia": "npm:lucia@^3.2.1",
    "@casl/ability": "npm:@casl/ability@^6.7.1",
    "logtape": "jsr:@logtape/logtape@^0.7.2"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv src/main.ts",
    "build": "deno compile --allow-net --allow-read --allow-write --allow-env --unstable-kv --output dist/abracadabra src/main.ts",
    "check": "deno check src/main.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "test": "deno test --allow-all --unstable-kv tests/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["dist/", "node_modules/"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": ["dist/", "node_modules/"]
  },
  "test": {
    "include": ["tests/"],
    "exclude": ["tests/fixtures/"]
  },
  "unstable": ["kv"],
  "nodeModulesDir": "auto"
}
